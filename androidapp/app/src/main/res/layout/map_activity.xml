<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/operator_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="onOperatorClicked"
                android:text="Aucun" />

            <RadioButton
                android:id="@+id/operator_bouygues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onOperatorClicked"
                android:text="Bouyg" />

            <RadioButton
                android:id="@+id/operator_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onOperatorClicked"
                android:text="Free" />

            <RadioButton
                android:id="@+id/operator_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onOperatorClicked"
                android:text="Orange" />

            <RadioButton
                android:id="@+id/operator_sfr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onOperatorClicked"
                android:text="SFR" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/map"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup">

            <GridView
                android:id="@+id/grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:listSelector="#00ffffff" />
        </LinearLayout>

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/picker"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ranking"
            app:np_orientation="horizontal"
            app:np_wheelItemCount="5"
            app:np_wrapSelectorWheel="false" />

        <ListView
            android:id="@+id/ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>